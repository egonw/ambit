<project name="webapps" default="all" basedir=".">
	<property name="version" value="0.1" />
	<property name="dist" value="dist" />
	<property name="qmrf_dir" value="qmrf" />
	<property name="item_dir" value="item" />

<target id="all" name="all" depends= "qmrf,item"/>

<target id="clean" name="clean" depends= "clean_qmrf,clean_item"/>

<target name="clean_qmrf" description="clean dist folder">
	<delete dir="${dist}/${qmrf_dir}" />
</target>

<target name="clean_item" description="clean item dist folder">
	<delete dir="${dist}/${item_dir}" />
</target>

<target name="qmrf" description="QMRF Inventory web application">
	<delete dir="${dist}/${qmrf_dir}" />
	<mkdir dir="${dist}/${qmrf_dir}" />
	<copy todir="${dist}/${qmrf_dir}">
		<fileset dir="${qmrf_dir}" includes="**/*" >
			<exclude name="*.bak" />
		</fileset>
	</copy>
	<jar jarfile="${dist}/qmrf.war" compress="true">
		<fileset dir="${dist}/${qmrf_dir}" includes="**/*" />
	</jar>
	<delete dir="${dist}/${qmrf_dir}" />
</target>

<target name="item" description="REPDOSE demo application">
	<delete dir="${dist}/${item_dir}" />
	<mkdir dir="${dist}/${item_dir}" />
	<copy todir="${dist}/${item_dir}">
		<fileset dir="${item_dir}" includes="**/*" >
			<exclude name="*.bak" />
		</fileset>
	</copy>
	<jar jarfile="${dist}/item.war" compress="true">
		<fileset dir="${dist}/${item_dir}" includes="**/*" />
	</jar>
	<delete dir="${dist}/${item_dir}" />
</target>

</project>