<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<display-name>Welcome to QMRF</display-name>
	<description>
		(Q)SAR Model Reporting Format Inventory application. Developed by Ideaconsult Ltd., Sofia, Bulgaria 2007.
	</description>
	
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>DB Connection to qmrf_documents</description>
		<res-ref-name>jdbc/qmrf_documents</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>


	<context-param>
		<param-name>support-email</param-name>
		<param-value>nina@acad.bg</param-value>
	</context-param>
	<!-- 	Required in order to send confirmation mails upon registration. Please change to a valid email server.
	-->
	<context-param>
		<param-name>mail-server</param-name>
		<param-value>amigo.acad.bg</param-value>
	</context-param>
		<!-- 	Required in order to send confirmation mails upon registration.Please change to a valid email address  -->
	<context-param>
		<param-name>mail-from</param-name>
		<param-value>qmrf@acad.bg</param-value>
	</context-param>
	<!-- 	This folder is used to store attachments uploaded by users. Please ensure the web appliaction server has write permission. -->
	<context-param>
		<param-name>attachments-dir</param-name>
		<param-value>/var/lib/qmrf</param-value>

	</context-param>
	 <!-- Servlets -->
	 <!-- jnlp startup servlet -->
    <servlet>
      <servlet-name>JnlpDownloadServlet</servlet-name>
      <servlet-class>jnlp.sample.servlet.JnlpDownloadServlet</servlet-class>
    </servlet>
	 
    <servlet-mapping>
      <servlet-name>JnlpDownloadServlet</servlet-name>
      <url-pattern>*.jnlp</url-pattern>
    </servlet-mapping>
	 

    <security-constraint>
	  <web-resource-collection>
		<web-resource-name>qmrf_protected</web-resource-name>
			<url-pattern>/protected.jsp</url-pattern>
			<url-pattern>/user.jsp</url-pattern>
			<url-pattern>/create.jsp</url-pattern>
			<url-pattern>/edit.jsp</url-pattern>

			<url-pattern>/attachments_xml.jsp</url-pattern>
			<url-pattern>/edit_attachmentsdb.jsp</url-pattern>
			<url-pattern>/list_attachments.jsp</url-pattern>

			<url-pattern>/admin.jsp</url-pattern>
			<url-pattern>/admin_import.jsp</url-pattern>
			<url-pattern>/admin_review.jsp</url-pattern>
			<url-pattern>/admin_status.jsp</url-pattern>
			<url-pattern>/catalogs.jsp</url-pattern>

			<url-pattern>/mypassword.jsp</url-pattern>
			<url-pattern>/myprofile.jsp</url-pattern>
			<url-pattern>/myrole.jsp</url-pattern>

			<url-pattern>/publish.jsp</url-pattern>
			<url-pattern>/submit.jsp</url-pattern>
			<url-pattern>/submit_update.jsp</url-pattern>
			<url-pattern>/update_status.jsp</url-pattern>
			<url-pattern>/import.jsp</url-pattern>
			<url-pattern>/download_users.jsp</url-pattern>

			<url-pattern>/author.jsp</url-pattern>
			<url-pattern>/headers.jsp</url-pattern>
			<url-pattern>/mail.jsp</url-pattern>			
			<!-- TODO restrict to editor only-->
			<url-pattern>/delete_document.jsp</url-pattern>			
			
	  </web-resource-collection>

	<auth-constraint>
		<role-name>qmrf_admin</role-name>
		<role-name>qmrf_user</role-name>
		<role-name>qmrf_editor</role-name>
		<role-name>qmrf_manager</role-name>		
	</auth-constraint>

  </security-constraint>

  <login-config>
	<auth-method>FORM</auth-method>
	<form-login-config>
	<form-login-page>/login.jsp</form-login-page>
	<form-error-page>/login-error.jsp</form-error-page>
	</form-login-config>
  </login-config>

	<security-role>
		<role-name>qmrf_admin</role-name>
	</security-role>
	<security-role>
		<role-name>qmrf_user</role-name>
	</security-role>
	<security-role>
		<role-name>qmrf_editor</role-name>
	</security-role>
	<security-role>
		<role-name>qmrf_manager</role-name>
	</security-role>

	<!-- Ambit taglibs-->
	<taglib>
		<taglib-uri>/ambit</taglib-uri>
		<taglib-location>/WEB-INF/tld/ambit.tld</taglib-location>
	</taglib>
	<!-- jakarta mailer taglibs -->
	<taglib>
			<taglib-uri>http://jakarta.apache.org/taglibs/taglibs-mailer</taglib-uri>
			<taglib-location>/WEB-INF/tld/taglibs-mailer.tld</taglib-location>
		</taglib>
		    <!-- xephyrus file upload-->
	<taglib>
		<taglib-uri>/xephyrus-fileupload</taglib-uri>
		<taglib-location>/WEB-INF/tld/xephyrus-fileupload.tld</taglib-location>
	</taglib>
</web-app>
