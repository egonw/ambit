<project name="iuclid5-ws" basedir="." default="jar">

	<property name="src.dir" value="${basedir}/src"></property>
	<property name="src.test.dir" value="${basedir}/test"></property>
	<property name="build.dir" value="${basedir}/build"></property>
	<property name="iuclid5.jar.dir" value="${basedir}/jar"></property>
	<property name="lib.dir" value="${basedir}/lib"></property>
	
	<path id="compile.classpath">
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>
	</path>
	
	<path id="run.classpath">
        <fileset dir="${iuclid5.jar.dir}">
            <include name="*.jar"/>
        </fileset>
		<pathelement location="${iuclid5.jar.dir}"/>
		<pathelement location="${build.dir}/test"/>
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>		
	</path>	
	
	<target name="clean">
		<delete  dir="${build.dir}" />
		<delete  dir="${iuclid5.jar.dir}" />
	</target>
	
	<target name="compile">
		<mkdir dir="${build.dir}"/>
		<javac classpathref="compile.classpath" destdir="${build.dir}" srcdir="${src.dir}" />
	</target>
	
	<target name="jar" depends="compile">
		<mkdir dir="${iuclid5.jar.dir}"/>
		<jar destfile="${iuclid5.jar.dir}/iuclid5-ws.jar" basedir="${build.dir}"></jar>
		<copy todir="${iuclid5.jar.dir}">
			<fileset dir="${src.dir}" >
			    <include name="*.properties"/>
			</fileset>
		</copy>
	</target>
	
	<target name="run-test" depends="jar">
		<mkdir dir="${build.dir}/test"/>
		<javac classpathref="run.classpath" destdir="${build.dir}/test" srcdir="${src.test.dir}" />
		<java fork="true" dir="${iuclid5.jar.dir}"
			classname="org.ideaconsult.iuclid5client.test.AllEnginesTest" 
			classpathref="run.classpath" 
		/>
	</target>
	
</project>