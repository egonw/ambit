<?xml version="1.0" encoding="UTF-8"?><project>
	<inceptionYear>2008</inceptionYear>
  <parent>
    <artifactId>ambit2-all</artifactId>
    <groupId>ambit</groupId>
    <version>2.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>ambit</groupId>
  <artifactId>ambit2-ambitxt</artifactId>
  <packaging>jar</packaging>  
  <name>ambit2-ambitxt</name>
  <version>2.0.0-SNAPSHOT</version>
  <description>A GUI application composed of several plugins</description>
  <developers>
  	<developer>
  		<id>vedina</id>
  		<name>Nina Jeliazkova</name>
  		<email>nina@acad.bg</email>
  		<roles>
  			<role>developer</role>
  		</roles>
  	</developer>
  </developers>
  <organization>
  	<name>Ideaconsult Ltd.</name>
  </organization>
  <build>
  	<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-2</version>
				<executions>
					<execution>
						<id>create-executable-jar</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptorRefs>
								<descriptorRef>
								jar-with-dependencies
								</descriptorRef>
							</descriptorRefs>
							<archive>
								<manifest>
									<mainClass>ambit2.ambitxt.AmbitXT</mainClass>
								</manifest>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
  	</plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>ambit</groupId>
    	<artifactId>ambit2-workflow</artifactId>
    	<version>${project.version}</version>
    </dependency>
    <dependency>
    	<groupId>ambit</groupId>
    	<artifactId>ambit2-plugin-search</artifactId>
    	<version>${project.version}</version>
    	<scope>provided</scope>
    </dependency>
    <dependency>
    	<groupId>ambit</groupId>
    	<artifactId>ambit2-plugin-analogs</artifactId>
    	<version>${project.version}</version>
    	<scope>provided</scope>
    </dependency>
    <dependency>
    	<groupId>ambit</groupId>
    	<artifactId>ambit2-plugin-dbtools</artifactId>
    	<version>${project.version}</version>
    	<scope>provided</scope>
    </dependency>
    <dependency>
    	<groupId>ambit</groupId>
    	<artifactId>ambit2-plugin-usermgr</artifactId>
    	<version>${project.version}</version>
    	<scope>provided</scope>
    </dependency>
  </dependencies>
  
</project>